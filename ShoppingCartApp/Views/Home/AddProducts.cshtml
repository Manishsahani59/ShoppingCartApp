@model ShoppingCartApp.Models.ProductInfo

@{
    ViewBag.Title = "AddProducts";
}

<div class="row">
    <div class="container d-flex justify-content-center">
        <h3 class="text-center">Add Product</h3>
      
        <div class="col-lg-5">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Name</label>
                    <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Quantity</label>
                    <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
                </div>
            </div>
         
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Price</label>
                    <input type="text" class="form-control" id="inputCity">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCity">Image</label>
                    <input type="text" class="form-control" id="inputCity">
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Are You Soure Want to Add
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-link"> <span class="glyphicon glyphicon-step-backward"></span>Back To view Product</button>
                <button type="submit" class="btn btn-primary">Sign in</button>

            </div>
    </div>
</div>




































